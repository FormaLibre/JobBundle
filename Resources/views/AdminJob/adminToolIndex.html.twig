{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'formalibre_job_admin_tool'|trans({}, 'tools'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">
            {{ 'formalibre_job_admin_tool'|trans({}, 'tools') }}
        </h3>
    </div>
    <div class="list-group">
        <a class="list-group-item" href="{{ path('formalibre_job_admin_communities_management') }}">
            {{ 'communities_management'|trans({}, 'job') }}
        </a>

        {% if communities|length > 0 %}
            <a class="list-group-item" href="{{ path('formalibre_job_admin_community_management', {'community': communities[0].getId()}) }}">
                {{ 'pending_announcers'|trans({}, 'job') }}
            </a>
        {% endif %}
    </div>
{% endblock %}