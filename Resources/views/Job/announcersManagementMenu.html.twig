{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">
            {{ 'announcers_management_menu'|trans({}, 'job') }}
        </h3>
    </div>
    <div class="list-group">
        {% if communities|length > 0 %}
            <a class="list-group-item" href="{{ path('formalibre_job_announcers_management', {'community': communities[0].getId()}) }}">
                {{ 'announcers'|trans({}, 'job') }}
            </a>
            <a class="list-group-item" href="{{ path('formalibre_job_pending_announcers_management', {'community': communities[0].getId()}) }}">
                {{ 'pending_announcers'|trans({}, 'job') }}
            </a>
        {% endif %}
    </div>
{% endblock %}